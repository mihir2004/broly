datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reminder {
  id        String   @id @default(uuid())
  userId    String
  message   String
  remindAt  DateTime
  sent      Boolean  @default(false)
  createdAt DateTime @default(now())
}
